#!/bin/bash -p

#
# COPYRIGHT 2018, Cerebras Systems, Inc.
#

NAME=iptablesinit
read -r SM < /etc/sm_addr2

start()
{
    /sbin/route add default gw "$SM" 
}

stop()
{
    /sbin/route del default gw "$SM" 
}


case "$1" in
    start)
        start ;;
    stop)
        stop ;;
    restart|reload)
        stop; start ;;
    *)
        echo "Usage: %0 {start|stop|restart}"
        exit 1
esac

exit 0
